<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.phonegap.fivepaisacalc"
    versionCode = "10"
    version     = "1.0.0" >

  <name>Profit Calculator for 5paisa</name>
  <description>
      5Paisa Day Profit Ledger Calculator By Samir Das
  </description>
  <author href="http://www.ignitedbrains.in" email="sameer@ignitedbrains.in">
      Sam
  </author>
    <access origin="https://*.bootstrapcdn.com" />
	<access origin="https://*.cloudflare.com" />
	<access origin="http://code.jquery.com/*" />
  <access origin="https://maxcdn.bootstrapcdn.com/*" />
  <access origin="https://cdnjs.cloudflare.com/*" />
  
    <access origin="*" />
	  <!-- all platforms -->
	  <preference name="phonegap-version" value="cli-6.5.0" />
	  <preference name="orientation" value="default" />
	  <preference name="stay-in-webview" value="true" />
      <preference name="android-minSdkVersion" value="7" />              <!-- android: MIN SDK version supported on the target device. MAX version is blank by default. -->
    <preference name="android-installLocation" value="auto" />           <!-- android: app install location. 'auto' will choose. 'internalOnly' is device memory. 'preferExternal' is SDCard. -->
	<preference name="splash-screen-duration" value="7000"/>
	    <preference name="show-splash-screen-spinner" value="true" />           <!-- ios: if set to false, the spinner won't appear on the splash screen during app loading -->
    <preference name="auto-hide-splash-screen" value="true" /> 
	<preference name="SplashScreen" value="screen" />
<preference name="SplashScreenDelay" value="6000" />
<preference name="AutoHideSplashScreen" value="true" />
		
<plugin name="cordova-plugin-splashscreen" spec="4.0.3" source="npm" />
<plugin name="cordova-plugin-whitelist" spec="1.3.2" source="npm" />
   <!-- Define app icon for each platform. -->
	<icon src="icon.png" />
	<icon src="res/icon/android/icon-36-ldpi.png" platform="android" qualifier="ldpi" />
	<icon src="res/icon/android/icon-48-mdpi.png" platform="android" qualifier="mdpi" />
	<icon src="res/icon/android/icon-72-hdpi.png" platform="android" qualifier="hdpi" />
	<icon src="res/icon/android/icon-96-xhdpi.png" platform="android" qualifier="xhdpi" />
	<icon src="res/icon/android/icon-144-xxhdpi.png" platform="android" qualifier="xxhdpi" />
	<icon src="res/icon/android/icon-192-fr-xxhdpi.png" platform="android" qualifier="fr-xxhdpi" />
  <!-- Define app splash screen for each platform. -->	
	<splash src="res/screen/android/screen-ldpi-portrait.png" platform="android" qualifier="port-ldpi" />
	<splash src="res/screen/android/screen-mdpi-portrait.png" platform="android" qualifier="port-mdpi" />
	<splash src="res/screen/android/screen-hdpi-portrait.png" platform="android" qualifier="port-hdpi" />
	<splash src="res/screen/android/screen-xhdpi-portrait.png" platform="android" qualifier="port-xhdpi" />
	<splash src="res/screen/android/screen-xxhdpi-portrait.png" platform="android" qualifier="port-xxhdpi" />
	<splash src="res/screen/android/screen-ldpi-landscape.png" platform="android" qualifier="land-ldpi" />
	<splash src="res/screen/android/screen-mdpi-landscape.png" platform="android" qualifier="land-mdpi" />
	<splash src="res/screen/android/screen-hdpi-landscape.png" platform="android" qualifier="land-hdpi" />
	<splash src="res/screen/android/screen-xhdpi-landscape.png" platform="android" qualifier="land-xhdpi" />
	<splash src="res/screen/android/screen-xxhdpi-landscape.png" platform="android" qualifier="land-xxhdpi" />
</widget>